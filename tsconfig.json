{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "types": ["jest"] 
  },
  "include": ["./**/*.js", "./**/*.ts"],
  "exclude": ["node_modules", "e2e", ".github"]
}
